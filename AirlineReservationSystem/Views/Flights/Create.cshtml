                @Html.DropDownList("FlightJetID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FlightJetID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FlightSource, htmlAttributes: new { @class = "control-label col-md-2" })
