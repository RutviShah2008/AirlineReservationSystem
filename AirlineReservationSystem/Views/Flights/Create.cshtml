@model AirlineReservationSystem.Models.Flight

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Ticket</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
