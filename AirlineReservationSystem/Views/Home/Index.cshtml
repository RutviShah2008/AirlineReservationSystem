@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

    <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img class="d-block w-100" src="~/Content/airplane.jpg" alt="Airline" style="width:100%; opacity:0.79;">
                <div class="carousel-caption">
                    <h1>AirlineReservationSystem</h1>
                    <p class="lead">Chepest AirlineReservation System</p>
                    <p><button class="btn-danger">@Html.ActionLink("BookNow", "Book", "Home")</button></p>
                </div>
            </div>

            <div class="item">
                <img class="d-block w-100" src="~/Content/chicago1.png" alt="Chicago" style="width:100%;opacity:0.79;">
                <div class="carousel-caption">
                    <h3>30%Off on Chicago Visit</h3>
                    <p>Enjoy Your Trip!!</p>
                </div>
            </div>

            <div class="item">
                <img class="d-block w-100" src="~/Content/dubai.jpg" alt="Dubai" style="width:100%;opacity:0.79;">
                <div class="carousel-caption">
                    <h3>20% Off on Dubai visit</h3>
                    <p>Explore Trip</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
 </div>
</hr>
