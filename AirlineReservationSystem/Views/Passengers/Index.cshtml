@model IEnumerable<AirlineReservationSystem.Models.Passenger>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PassengerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassengerEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PassengerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PassengerEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PassengerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PassengerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PassengerID })
        </td>
    </tr>
}

</table>
