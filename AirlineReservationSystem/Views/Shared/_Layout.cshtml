<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AirlineReservationSystem</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @*Added background color to navbar*@
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: dimgray;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AirReservation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @*added new navigation panel*@
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Jets", "Index", "Jets")</li>
                    <li>@Html.ActionLink("PlanTrip", "Create", "Flights")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("View", "Index", "Tickets")</li>
                    }

                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @*Alert for weather added to check weather before planning trip*@
    <div class="alert alert-danger container text-capitalize text-center" role="alert">
        <i class="glyphicon glyphicon-exclamation-sign"></i>
        <strong>Weather: </strong> <a href="https://www.accuweather.com/en/world-weather" class="alert-link">Travel Weather!! Alert</a>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*Footer which will display at the center of page*@
        <footer>
            <div class="footer-copyright text-center py-3">
                © 2019 Copyright: COMP2084 : AirlineResrvationSystem
                <a href="https://github.com/RutviShah2008/"> RutviShah-200390373</a>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
